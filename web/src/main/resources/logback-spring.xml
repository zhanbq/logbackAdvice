<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <jmxConfigurator/>
    <springProperty scope="context" name="logLevel" source="log.common.level" />
    <springProperty scope="context" name="logPath" source="log.common.path" />
    <springProperty scope="context" name="serverName" source="spring.application.name" />

    <springProfile name="local">
        <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>

        <root level="${logLevel}">
            <appender-ref ref="console"/>
        </root>
    </springProfile>

    <springProfile name="dev">
        <appender name="businessLogFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${logPath}/business.log</file>
            <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
                <level>${logLevel}</level>
            </filter>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${logPath}/business-%d{yyyy-MM-dd}_%i.log.zip</fileNamePattern>
                <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                    <maxFileSize>100MB</maxFileSize>
                </timeBasedFileNamingAndTriggeringPolicy>
                <maxHistory>30</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>

        <appender name="errorLogFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${logPath}/error.log</file>
            <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
                <level>error</level>
            </filter>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${logPath}/error-%d{yyyy-MM-dd}_%i.log.zip</fileNamePattern>
                <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                    <maxFileSize>100MB</maxFileSize>
                </timeBasedFileNamingAndTriggeringPolicy>
                <maxHistory>30</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>
        <appender name="rmxcLogAppender" class="com.rmxc.utils.logcollector.logback.appender.LogbackCustomAppender">
            <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
                <charset>UTF-8</charset>
            </encoder>
            <requestStrategy>okhttp3</requestStrategy>
            <serverName>${serverName}</serverName>
<!--            <hosts>47.92.198.89:20209</hosts>-->
            <hosts>127.0.0.1:20209,47.92.198.89:20209</hosts>
            <logSavePath>/logs/consumer/logback</logSavePath>
            <indexRegistPath>/logs/index/regist</indexRegistPath>
            <appid>pplmc-bizasd</appid>
            <securityKey>pplmc-bizvvv</securityKey>

            <loadbalanceRule class="com.rmxc.utils.logcollector.loadbalancer.RoundRobinRule"></loadbalanceRule>
        </appender>

        <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>

        <root level="${logLevel}">
            <appender-ref ref="businessLogFile"/>
            <appender-ref ref="errorLogFile"/>
            <appender-ref ref="rmxcLogAppender"/>
            <appender-ref ref="console"/>
        </root>
    </springProfile>

</configuration>
